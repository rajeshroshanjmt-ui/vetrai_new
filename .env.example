# VetRAI Environment Configuration

# ==========================================
# Server Configuration
# ==========================================
LANGFLOW_HOST=0.0.0.0
LANGFLOW_PORT=7680
LANGFLOW_WORKERS=2

# ==========================================
# Authentication (Development Mode)
# ==========================================
# For development, auto-login is enabled
# Change to false for production
LANGFLOW_AUTO_LOGIN=true
LANGFLOW_AUTH_SKIP_LOGIN=true

# Default admin credentials (CHANGE IN PRODUCTION!)
LANGFLOW_SUPERUSER=admin
LANGFLOW_SUPERUSER_PASSWORD=admin

# Secret key for JWT tokens (CHANGE IN PRODUCTION!)
LANGFLOW_SECRET_KEY=dev-secret-key-change-in-production

# ==========================================
# Database Configuration
# ==========================================
# SQLite (Development)
LANGFLOW_DATABASE_URL=sqlite:///./vetrai_data/vetrai.db

# PostgreSQL (Production - uncomment to use)
# LANGFLOW_DATABASE_URL=postgresql://vetrai:vetrai@localhost:5432/vetrai

# ==========================================
# CORS & Security Settings
# ==========================================
# Allow all origins (development only!)
LANGFLOW_CORS_ORIGINS=*
LANGFLOW_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Cookie security settings (for localhost HTTP)
LANGFLOW_COOKIE_SECURE=false
LANGFLOW_COOKIE_HTTPONLY=false
LANGFLOW_COOKIE_SAMESITE=lax

# ==========================================
# Frontend Configuration
# ==========================================
VITE_API_BASE_URL=/api
VITE_PUBLIC_PATH=/
VITE_LOG_LEVEL=info

# ==========================================
# Python Configuration
# ==========================================
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# ==========================================
# Development Options
# ==========================================
# Set to true for verbose logging
LANGFLOW_LOG_LEVEL=info

# Enable development mode features
LANGFLOW_ENVIRONMENT=development
